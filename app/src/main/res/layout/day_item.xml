<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/gplusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/gplus_user_profile">
        </include>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/trip_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/origen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Nombre"
            android:layout_marginBottom="5dp"
            android:text="Ciudad Origen:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Destino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/origen"
            android:layout_marginBottom="5dp"
            android:text="Destino:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hour_value"
            android:layout_toLeftOf="@+id/dest_value"
            android:layout_toStartOf="@+id/dest_value"
            android:text="Horario:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dest_value"
            android:layout_alignStart="@+id/dest_value"
            android:layout_alignTop="@+id/Nombre"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/origen_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/origen"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/origen"
            android:layout_toRightOf="@+id/origen"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/dest_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Destino"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/Destino"
            android:layout_toRightOf="@+id/Destino"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/hour_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Destino"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/Horario"
            android:layout_toRightOf="@+id/Horario"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sendMail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/sendMail"
            android:background="@color/Orange"
            android:gravity="center_vertical|center_horizontal"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Horario"
            android:layout_marginTop="5dp"
            android:text="Mail:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/mailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/comentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="5dp"
            android:text="Comentarios:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/comentariosValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/comentarios"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/comentarios"
            android:layout_toRightOf="@+id/comentarios"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <Button
            android:id="@+id/sendMail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/name_value"
            android:background="@color/Orange"
            android:text="Contactar"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/viewPrfile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sendMail"
            android:layout_marginTop="10dp"
            android:background="@color/Orange"
            android:text="Ver Perfil"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:textStyle="bold"/>


    </RelativeLayout>
</LinearLayout>