<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.pc.adedo.Chofer">

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10sp"  >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"

                        android:gravity="top" >

                       <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10sp"
                            android:gravity="center_horizontal"
                            android:text="REGISTRO DE CONDUCTOR"
                            android:textColor="@color/Orange"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/textView3"
                            android:ems="10"
                            android:paddingLeft="20sp"
                            android:hint="Mail"
                            android:inputType="textEmailAddress" >
                        <requestFocus />
                        </EditText>

                        <EditText
                            android:id="@+id/editText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/editText"
                            android:ems="10"
                            android:hint="Nombre y apellido"
                            android:inputType="textPersonName"
                            android:paddingLeft="20sp" />

                        <EditText
                            android:id="@+id/editText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/editText2"
                            android:ems="10"
                            android:paddingLeft="20sp"
                            android:hint="Dirección"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/editText4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/editText3"
                            android:ems="10"
                            android:paddingLeft="20sp"
                            android:hint="Teléfono"
                            android:inputType="phone" />

                        <TextView
                            android:id="@+id/tv_fecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Fecha de nacimiento"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingLeft="20sp"
                            android:layout_below="@+id/editText4"/>

                        <EditText
                            android:id="@+id/editText15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/spinnerAño"
                            android:ems="10"
                            android:paddingLeft="20sp"
                            android:hint="D.N.I"
                            android:inputType="number" />

                        <EditText
                            android:id="@+id/editText16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/editText15"
                            android:ems="10"
                            android:paddingLeft="20sp"
                            android:hint="Facebook (no es obligatorio)"
                            android:inputType="text"
							android:visibility="gone" />

                        <EditText
                            android:id="@+id/editText5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/editText16"
                            android:ems="10"
                            android:paddingLeft="20sp"
                            android:hint="Vehículo"
                            android:inputType="textPersonName" />

                        <RelativeLayout
		                    android:layout_width="match_parent"
		                    android:layout_height="match_parent"
		                    android:layout_below="@+id/editText5">

	                        <ImageButton
	                            android:id="@+id/ib_siguiente_registro"
	                            android:layout_width="60sp"
	                            android:layout_height="40sp"
	                            android:layout_alignParentRight="true"
	                            android:layout_below="@+id/checkBox1"
	                            android:background="@drawable/arrow"
	                            android:onClick="siguiente" />

	                        <CheckBox
                                android:textColor="@color/Orange"
	                            android:id="@+id/checkBox1"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_alignParentRight="true"
	                            android:text="Acepto Terminos y Condiciones" />

							<Button
                                android:id="@+id/button1"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
								android:background="@drawable/leer"
                                android:onClick="TerminosCondiciones"
                                android:textColor="#FFD700"
								android:layout_alignParentBottom="true"
								android:layout_alignParentLeft="true"
								android:layout_alignParentStart="true"
								android:layout_marginLeft="101dp"
								android:layout_marginStart="101dp"/>

						</RelativeLayout>

                        <Spinner
                            android:id="@+id/spinnerMes"
                            android:layout_width="90sp"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/tv_fecha"
                            android:layout_alignTop="@+id/spinnerDia" />

                        <Spinner
                            android:id="@+id/spinnerAño"
                            android:layout_width="110sp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_fecha"
                            android:layout_toRightOf="@+id/tv_fecha" />

                        <Spinner
                            android:id="@+id/spinnerDia"
                            android:layout_width="95sp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_fecha"
                            android:layout_toLeftOf="@+id/spinnerMes" />

                    </RelativeLayout>
                </LinearLayout>

            </ScrollView>

	<ImageButton
		android:id="@+id/imageButton1"
		android:layout_width="40sp"
		android:layout_height="40sp"
		android:background="@drawable/home"
		android:onClick="atras"
		android:layout_marginRight="147dp"
		android:layout_marginEnd="147dp"
		android:layout_marginBottom="139dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"/>

</RelativeLayout>
