<RelativeLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                tools:context=".Pasajero_viaje">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20sp"
        android:orientation="vertical"

        android:padding="10sp">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Orange"
                    android:onClick="listado"
                    android:text="Ver calendario"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/button2p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:background="@color/Orange"
                    android:onClick="buscar"
                    android:text="Crear Solicitud de Viaje"
                    android:textColor="#ffffff"/>

                <com.google.android.gms.ads.NativeExpressAdView
                    android:id="@+id/adView_pasajero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    ads:adSize="300x230"
                    ads:adUnitId="ca-app-pub-4314610379659678/2219115141">
                </com.google.android.gms.ads.NativeExpressAdView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
